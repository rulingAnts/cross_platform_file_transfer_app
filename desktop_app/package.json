{
  "name": "rapid-transfer-desktop",
  "version": "0.1.0",
  "description": "Rapid File Transfer Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win",
    "lint": "eslint src/**/*.js"
  },
  "keywords": [
    "file-transfer",
    "electron",
    "cross-platform"
  ],
  "author": "Rapid Transfer Team",
  "license": "MIT",
  "dependencies": {
    "bonjour-service": "^1.2.1",
    "node-forge": "^1.3.1",
    "archiver": "^7.0.1",
    "tar": "^7.4.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^32.2.7",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.1"
  },
  "build": {
    "appId": "com.rapidtransfer.desktop",
    "productName": "Rapid Transfer",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
